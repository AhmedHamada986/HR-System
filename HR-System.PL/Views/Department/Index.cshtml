@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All Departments </h1>

<br />
<br />
<a asp-action="Create" asp-controller="Department"class="btn btn-primary" >Create Department</a>
@if (Model.Count()>0)
{
    <table class="table table-hover table-striped">

        <thead>
            <tr>
                <th> Code </th>
                <th> Name </th>
                <th> Date of Creations </th>
                <th> Details</th>
                <th> Update </th>
                <th> Delete </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            
            {
            <tr>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td>@item.CreateAt</td>
                <td><a  asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a></td>
                <td><a asp-action="Edit" asp-route-id ="@item.Id" class="btn btn-info">Update</a></td>
                <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>

            </tr>    
            
            }

        </tbody>
    </table>
    
}else{  

    <div class="mt-4 alert alert-info">
        <h3>There is NO Department :(</h3>
    </div>
}

